@model WebCourse.Models.Instructor

@section title {
    Instructor: @Model.Name
}
@section style {
    <style>
        header {
            height: 150px;
            align-content: flex-end
        }

        footer {
            margin-top: 120px;
        }
    </style>

}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card" style="width: 100%; max-width: 600px;">
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/assets/@Model.Image" alt="Instructor Image" class="img-fluid mb-3 rounded-circle" style="max-width: 150px; max-height: 150px;" />
            }
            else
            {
                <p>No image available</p>
            }

            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">
                <strong>ID:</strong> @Model.Id <br />
                <strong>Address:</strong> @Model.Address <br />
                <strong>Salary:</strong> @Model.Salary <br />
                <strong>Department:</strong> @Model.Department?.Name <br />
                <strong>Course:</strong> @Model.Course?.Name <br />
            </p>
        </div>
    </div>
</div>

<div class="container mt-3 d-flex justify-content-center">
    <a href="@Url.Action("Index", "Instructor")" class="btn btn-secondary">Back to List</a>
</div>
