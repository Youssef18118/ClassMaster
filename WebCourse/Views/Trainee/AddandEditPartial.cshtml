@model Trainee
@{
    SelectList deptOpt = new SelectList(ViewBag.Departments, "Id", "Name");
}
<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span style="color:red" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span style="color:red" asp-validation-for="Address"></span>
</div>
<div class="form-group">
    <label asp-for="Image"></label>
    <input asp-for="Image" class="form-control" />
    <span style="color:red" asp-validation-for="Image"></span>
</div>

<div class="form-group">
    <label asp-for="Grade"></label>
    <input asp-for="Grade" class="form-control" />
    <span style="color:red" asp-validation-for="Grade"></span>
</div>
<div class="form-group">
    <label asp-for="DepartmentId"></label>
    <select asp-for="DepartmentId" asp-items="deptOpt" class="form-control">
    </select>
</div>

<br />
<button type="submit" class="btn btn-outline-primary">Save</button>