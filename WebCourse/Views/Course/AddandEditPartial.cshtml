@model Course
@{
    SelectList deptOpt = new SelectList(ViewBag.Departments, "Id", "Name");
}
<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span style="color:red" asp-validation-for="Name"></span>
</div>
<div class="form-group">
    <label asp-for="Degree"></label>
    <input asp-for="Degree" class="form-control" />
    <span style="color:red" asp-validation-for="Degree"></span>
</div>
<div class="form-group">
    <label asp-for="Mindegree"></label>
    <input asp-for="Mindegree" class="form-control" />
    <span style="color:red" asp-validation-for="Mindegree"></span>
</div>

<div class="form-group">
    <label asp-for="DepartmentId"></label>
    <select asp-for="DepartmentId" asp-items="deptOpt" class="form-control">
    </select>
</div>

<br />
<button type="submit" class="btn btn-outline-primary">Save</button>